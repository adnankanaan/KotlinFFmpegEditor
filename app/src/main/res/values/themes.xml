<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinWebAppVideoEditer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:keyTextColor">@color/textColor</item>
        <item name="android:button">@color/textColor</item>
        <item name="android:colorPrimary">@color/textColor</item>
        <item name="android:textColor">@color/textColor</item>
        <!-- Used for the background -->
        <item name="android:background">@color/app_bg</item>
        <item name="android:colorBackground">@color/app_bg</item>
        <item name="android:windowBackground">@color/app_bg</item>
    </style>
</resources>